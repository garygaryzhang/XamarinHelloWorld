    <StackLayout Padding="40"
                 Spacing="40"
                 HorizontalOptions="Center"
                 VerticalOptions="Center"
                 Orientation="Vertical" >        
    <Image Source="{local:EmbeddedImage XamarinHelloWorld.Images.ricca.jpg}"
           WidthRequest="100"   
           HeightRequest="100">
        <Image.Clip>
            <EllipseGeometry
                Center="50,50"
                RadiusX="50"
                RadiusY="50"/>
        </Image.Clip>
    </Image>
    <Label Text="Meow Meow" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" />
    <Image Source="{local:EmbeddedImage XamarinHelloWorld.Images.mac.jpg}"
           WidthRequest="100"   
           HeightRequest="100">
        <Image.Clip>
            <EllipseGeometry
                Center="50,50"
                RadiusX="50"
                RadiusY="50"/>
        </Image.Clip>
    </Image>
    <Label Text="Ruff Ruff" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" />
    </StackLayout>

</ContentPage>
